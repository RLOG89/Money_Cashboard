<h1>Edit Transaction</h1>

<form action="/transactions/<%= @transaction.id %>" method="post">
<input type="hidden" name="_method" value="put">

  <label for="date">Date:</label>
  <input type="date" name="date" value="<%= @transaction.date %>">

  <label for="merchant">Merchant:</label>
  <select name="merchant_id">
      <% @merchants.each do |merchant| %>
        <option value="<%= merchant.id %>" <%= 'selected' if @transaction.merchant.id == merchant.id %>><%= merchant.name %></option>    
      <% end %>
  </select>

  <label for="amount">Amount(Â£):</label>
  <input type="number" step="0.01" min="0" name="amount" value="<%= @transaction.amount %>">

  <label for="tag_id">Tag</label>
  <select name="tag_id">
      <% @tags.each do |tag| %>
        <option value="<%= tag.id %>" <%= 'selected' if @transaction.tag.id == tag.id %>><%= tag.name %></option>    
      <% end %>
  </select>
  <br>
  <input type='submit' value="Update Transaction">
</form>

<form action="/transactions/<%= @transaction.id %>" method="post">
  <input type='submit' value="Delete Transaction">
  <input type="hidden" name="_method" value="delete">
</form>